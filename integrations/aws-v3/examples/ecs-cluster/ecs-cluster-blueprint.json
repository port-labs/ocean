{
  "identifier": "ecsCluster",
  "title": "ECS Cluster",
  "icon": "AWS",
  "schema": {
    "properties": {
      "clusterName": {
        "type": "string",
        "title": "Cluster Name",
        "description": "The name of the ECS cluster"
      },
      "status": {
        "type": "string",
        "title": "Status",
        "description": "The status of the ECS cluster",
        "enum": ["ACTIVE", "INACTIVE", "PROVISIONING", "DEPROVISIONING"]
      },
      "activeServicesCount": {
        "type": "number",
        "title": "Active Services Count",
        "description": "The number of active services in the cluster"
      },
      "pendingTasksCount": {
        "type": "number",
        "title": "Pending Tasks Count",
        "description": "The number of pending tasks in the cluster"
      },
      "runningTasksCount": {
        "type": "number",
        "title": "Running Tasks Count",
        "description": "The number of running tasks in the cluster"
      },
      "registeredContainerInstancesCount": {
        "type": "number",
        "title": "Registered Container Instances Count",
        "description": "The number of registered container instances in the cluster"
      },
      "capacityProviders": {
        "type": "array",
        "title": "Capacity Providers",
        "description": "The capacity providers associated with the cluster",
        "items": {
          "type": "string"
        }
      },
      "defaultCapacityProviderStrategy": {
        "type": "array",
        "title": "Default Capacity Provider Strategy",
        "description": "The default capacity provider strategy for the cluster",
        "items": {
          "type": "object",
          "properties": {
            "capacityProvider": {
              "type": "string"
            },
            "weight": {
              "type": "number"
            },
            "base": {
              "type": "number"
            }
          }
        }
      },
      "tags": {
        "type": "array",
        "title": "Tags",
        "description": "The tags associated with the cluster",
        "items": {
          "type": "object",
          "properties": {
            "key": {
              "type": "string"
            },
            "value": {
              "type": "string"
            }
          }
        }
      },
      "settings": {
        "type": "array",
        "title": "Settings",
        "description": "The settings for the cluster",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "value": {
              "type": "string"
            }
          }
        }
      },
      "configurations": {
        "type": "array",
        "title": "Configurations",
        "description": "The configurations for the cluster",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "type": {
              "type": "string"
            }
          }
        }
      },
      "statistics": {
        "type": "array",
        "title": "Statistics",
        "description": "The statistics for the cluster",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "value": {
              "type": "string"
            }
          }
        }
      },
      "attachments": {
        "type": "array",
        "title": "Attachments",
        "description": "The attachments for the cluster",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "type": {
              "type": "string"
            },
            "status": {
              "type": "string"
            },
            "details": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "value": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      },
      "attachmentsStatus": {
        "type": "string",
        "title": "Attachments Status",
        "description": "The status of attachments for the cluster"
      },
      "serviceConnectDefaults": {
        "type": "object",
        "title": "Service Connect Defaults",
        "description": "The service connect defaults for the cluster",
        "properties": {
          "namespace": {
            "type": "string"
          }
        }
      },
      "pendingTaskArns": {
        "type": "array",
        "title": "Pending Task ARNs",
        "description": "The ARNs of pending tasks in the cluster",
        "items": {
          "type": "string"
        }
      }
    },
    "required": ["clusterName"]
  }
}
